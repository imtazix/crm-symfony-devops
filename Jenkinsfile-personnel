pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "imtazix/crm-symfony-devops"
    }

    stages {

        stage('Cloner le projet') {
            steps {
                git credentialsId: 'github-token', url: 'https://github.com/imtazix/crm-symfony-devops.git', branch: 'main'
            }
        }

        stage('Composer Install') {
            steps {
                echo "Installation des d√©pendances PHP"
                sh '/bin/bash -c "composer install"'
                sh '/bin/bash -c "php bin/console cache:clear || true"'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Construction de l'image Docker"
                sh '/bin/bash -c "docker build -t $DOCKER_IMAGE ."'
            }
        }

        stage('Push to DockerHub') {
            steps {
                echo "Push de l'image sur DockerHub"
                withCredentials([usernamePassword(credentialsId: 'dockerHub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        /bin/bash -c "
                        echo \\"$DOCKER_PASS\\" | docker login -u \\"$DOCKER_USER\\" --password-stdin &&
                        docker push $DOCKER_IMAGE
                        "
                    '''
                }
            }
        }
    }
}
