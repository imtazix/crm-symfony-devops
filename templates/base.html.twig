<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        {% block stylesheets %}
            {# Place ici tes liens CSS (Bootstrap, Tailwind, etc.) #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {# Place ici tes scripts JS #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <header class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_dashboard') }}">CRM Symfony</a>

                <div class="collapse navbar-collapse justify-content-end">
                    {% if app.user %}
                        <ul class="navbar-nav align-items-center">
                            <li class="nav-item me-3">
                                <span class="nav-link text-white">
                                    Bonjour, {{ app.user.nom }} {{ app.user.prenom }}
                                </span>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link" href="{{ path('client_list') }}">Clients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                            </li>
                        </ul>
                    {% else %}
                        <a class="nav-link text-white" href="{{ path('app_login') }}">Se connecter</a>
                    {% endif %}
                </div>
            </div>
        </header>

        <main class="container">
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
